#include <iostream>
#include <algorithm> 

using namespace std;

int main () {
int matrix[3][3] {
    {1, 2, 3},
    {4, 5, 6},
    {7, 8, 9}
};

cout << "Матриця до сортування:";
for (int i = 0; i < 3; ++i) {
    for (int j = 0; j < 3; ++j) {
        cout << matrix[i][j] << " ";
    }
}

for (int i = 0; i < 3; ++i) {
    sort(matrix[i], matrix[i] + 3); 
}

cout << "Матриця після сортування: ";
for (int i = 0; i < 3; ++i) {
    for (int j = 0; j < 3; ++j) {
        cout << matrix[i][j] << " ";
    }
}

}
